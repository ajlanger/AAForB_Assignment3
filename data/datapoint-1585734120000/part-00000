ow\"|{{Escyr|1990}}\n|rowspan=\"2\"|Ana do Carmo ||Jo\u00e3o Abel Fonseca ||\n|-\n!scope=\"row\"|{{Escyr|1991}}\n|Maria Margarida Gaspar ||\n|-\n!scope=\"row\"|{{Escyr|1992}}\n|El\u00e1dio Cl\u00edmaco ||Ana Zanatti ||\n|-\n!scope=\"row\"|{{Escyr|1993}}\n|Isabel Bahia ||Margarida Merc\u00eas de Mello ||\n|-\n!scope=\"row\"|{{Escyr|1994}}\n|El\u00e1dio Cl\u00edmaco ||Isabel Bahia ||\n|-\n!scope=\"row\"|{{Escyr|1995}}\n|Ana do Carmo ||Serenella Andrade ||\n|-\n!scope=\"row\"|{{Escyr|1996}}\n|Maria Margarida Gaspar ||rowspan=\"2\" |Cristina Rocha ||\n|-\n!scope=\"row\"|{{Escyr|1997}}\n|Carlos Ribeiro ||\n|-\n!scope=\"row\"|{{Escyr|1998}}\n|rowspan=\"2\"|Rui Unas ||[[L\u00facia Moniz]] ||\n|-\n!scope=\"row\"|{{Escyr|1999}}\n|Jo\u00e3o David Nunes ||[[Manuel Lu\u00eds Goucha]] ||\n|-\n!scope=\"row\"|{{Escyr|2000}}\n|rowspan=\"3\"|El\u00e1dio Cl\u00edmaco ||rowspan=\"9\" {{TBA|Unknown}} ||{{N/A|Did not participate}} ||\n|-\n!scope=\"row\"|{{Escyr|2001}}\n|Margarida Merc\u00eas de Mello ||\n|-\n!scope=\"row\"|{{Escyr|2002}}\n|{{N/A|Did not participate}} ||\n|-\n!scope=\"row\"|{{Escyr|2003}}\n|Margarida Merc\u00eas de Mello ||Helena Ramos ||\n|-\n!scope=\"row\"|{{Escyr|2004}}\n|rowspan=\"3\"|El\u00e1dio Cl\u00edmaco || rowspan=\"2\" |Isabel Angelino ||\n|-\n!scope=\"row\"|{{Escyr|2005}}\n|\n|-\n!scope=\"row\"|{{Escyr|2006}}\n|Cristina Alves ||\n|-\n!scope=\"row\"|{{Escyr|2007}}\n|rowspan=\"2\" |Isabel Angelino, [[Jorge Gabriel]] ||Francisco Mendes ||\n|-\n!scope=\"row\"|{{Escyr|2008}}\n|[[Sabrina (Portuguese singer)|Teresa Villa-Lobos]] ||\n|-\n!scope=\"row\"|{{Escyr|2009}}\n|H\u00e9lder Reis ||rowspan=\"9\" {{N/A|No radio broadcast}} ||Helena Coelho ||\n|-\n!scope=\"row\"|{{Escyr|2010}}\n|S\u00e9rgio Mateus ||Ana Galv\u00e3o ||\n|-\n!scope=\"row\"|{{Escyr|2011}}\n|[[S\u00edlvia Alberto]] ||rowspan=\"2\"|Joana Teles ||\n|-\n!scope=\"row\"|{{Escyr|2012}}\n|Pedro Granger ||\n|-\n!scope=\"row\"|{{Escyr|2013}}\n|rowspan=\"2\"|S\u00edlvia Alberto ||{{N/A|Did not participate}} ||